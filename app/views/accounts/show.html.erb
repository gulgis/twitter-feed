<p id="notice"><%= notice %></p>
<div class="container">
    <div class="page-header">
        <h1 id="timeline">@<%= @account.username %></h1>
    </div>
    <% TwitterApi.get_five_tweets(@account.username).each_with_index do |tweet, index| %>

      <ul class="timeline">
          <li>
            <div class="timeline-badge"<i class="glyphicon glyphicon-user"></i>
            </div>
            <div class="timeline-panel">

                <p><small class="text-muted"><i class="glyphicon glyphicon-time"><span> <%= time_ago_in_words(tweet.created_at) %> ago</span></i></small></p>

              <div class="timeline-body">
                <%= parsed_tweet tweet %>
              </div>
            </div>
          </li>
      </ul>
    <% end %>
</div>
<h3><span>  <%= link_to 'Back', accounts_path %></span></h3>
