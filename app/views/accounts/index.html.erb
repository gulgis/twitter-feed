<p id="notice"><%= notice %></p>
<h3><span>  <%= link_to 'Add Twitter Account', new_account_path %></span></h3>
<div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="text-center text-info">Lastest tweets</h1>
                    </div>
                </div>

                <div class="row">
                  <% @accounts.each do |account| %>
                    <div class="col-md-4">
                        <img src="https://twitter.com/<%=account.username%>/profile_image?size=original"
                        class="img-quadrata center-block" >
                        <h3 class="text-center" ><% account.username %>
                        <br/>
                        <small> <%= link_to 'Show tweets |', account %></small>
                        <small><%= link_to 'Edit |', edit_account_path(account) %></small>
                        <small><%= link_to 'Delete ', account, method: :delete, data: { confirm: 'Are you sure?' } %></small>
                      </h3>
                    </div>
                      <% end %>
                </div>

            </div>
        </div>
